#!/usr/bin/env ruby

## Fixes 'invalid byte sequence in US-ASCII'
Encoding.default_external = Encoding::UTF_8
Encoding.default_internal = Encoding::UTF_8

require 'pty'
require 'expect'

command="<%= scope.lookupvar('android::paths::sdk_home') %>/tools/android update sdk -u --all -t <%= @title %> <%= @proxy_host %> <%= @proxy_port %>"
match=%r/^\s*Do you accept the license .* \[y\/n\]:\s*/
response="y"

puts command

PTY.spawn(command) do |r,w,p|

  w.sync = true

  begin
    while true do
      r.expect(match)
      sleep(0.1)
      w.puts(response)
    end
  rescue Errno::EIO, PTY::ChildExited
  end
end

exit
